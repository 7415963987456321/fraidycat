{
  "name": "fraidycat",
  "scripts": {
    "start": "parcel src/index.html",
    "build": "export STORAGE=dat && yarn run build:clean && parcel build src/index.html --no-cache -d build/${STORAGE}",
    "webext": "export STORAGE=webext && yarn run build:clean && parcel build webext/manifest.json -d build/${STORAGE}",
    "build:clean": "rimraf build/${STORAGE} && cpx src/root/ build/${STORAGE}"
  },
  "dependencies": {
    "@fnando/sparkline": "^0.3.10",
    "@kickscondor/elasticlunr": "^0.9.8",
    "@kickscondor/router": "^0.7.3",
    "@shelacek/ubjson": "^1.0.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "cpx": "^1.5.0",
    "emoji-selector": "^1.0.4",
    "fast-json-patch": "^3.0.0-1",
    "feedme": "^1.2.0",
    "hyperapp": "^1.2.9",
    "json-date-parser": "^1.0.1",
    "normalize-url": "^4.5.0",
    "parcel-bundler": "^1.12.4",
    "quick-lru": "^4.0.1",
    "rimraf": "^3.0.0",
    "taggle": "^1.14.4",
    "umbrellajs": "^3.1.0",
    "yarn": "^1.19.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-stage-0": "^6.24.1",
    "node-sass": "^4.13.0",
    "parcel-plugin-web-extension": "^1.5.2",
    "webextension-polyfill": "^0.4.0"
  }
}
